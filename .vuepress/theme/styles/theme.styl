@import url('https://fonts.googleapis.com/css?family=Bangers|Open+Sans&display=swap');
@tailwind base;
@css {
  html {
    font-size: 12pt;
    height: 100%;
    width: 100%;
  }
  body {
    @apply font-body;
    height: 100%;
    width: 100%;
  }
  h1 {
    @apply font-heading;
    @apply text-4xl;
    @apply mb-3;
  }
  h2 {
    @apply font-heading;
    @apply text-2xl;
    @apply mb-3;
  }
  h3 {
    @apply font-body;
    @apply font-bold;
    @apply text-xl;
    @apply mb-3;
  }
  h4 {
    @apply text-xl;
    @apply font-bold;
    @apply border-b-2;
    @apply border-orange-500;
  }
  ol {
    @apply list-decimal;
    @apply list-inside;
    @apply mb-3;
  }
  ul {
    @apply list-disc;
    @apply list-inside;
    @apply mb-3;
  }
  p {
    @apply mb-3;
  }
  a {
    @apply text-orange-500;
  }
  a:focus,
  a:hover {
    @apply underline text-orange-300;
  }
  table {
    @apply w-full;
  }
  code {
    @apply bg-gray-100 text-green-700 text-xs py-1 px-2 font-mono;
  }
  hr {
    @apply border-b border-gray-400 mx-5 my-5;
  }
}
@tailwind components;
@tailwind utilities;

@css {
  .spoiler {
    @apply text-gray-400;
  }
  .comment {
    @apply bg-orange-100 text-orange-600 py-1 px-2 text-xs;
  }
  .text-message {
    @apply p-3 pl-5 border-l border-l-4 border-orange-500 font-mono;
  }
  h1 small {
    @apply text-gray-600;
  }
}
